@model IEnumerable<CustomerViewModel>

<h1>Customers</h1>

<a class="btn btn-primary" asp-action="Create">Add New Customer</a>

@if (Model.Any())
{
    <hr />

    <form class="col-4">
        <p>
            <label>Filter by Last Name:</label>
            <input type="text" name="SearchValue" class="form-control" />
            <button class="btn btn-success btn-sm mt-3">Search</button>
        </p>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Gender</td>
                    <td>@customer.Email</td>
                    <td>@(new HtmlString(customer.Address))</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@customer.Key">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}